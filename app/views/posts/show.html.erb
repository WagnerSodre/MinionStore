<h1> <%= @post.title %> </h1>
<small> <%= @post.created_at.strftime("%b %d. %y ") %> </small>
<p> <%= @post.body %> </p>

<p> Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %> </p> 

<%= link_to "Back", posts_path %> 

<% if false %>
<%= link_to "Edit Post", edit_post_path %> | <%= link_to "Delete", @post,  data: { confirm: "Are you sure you want to delete this post?"}, :method => :delete  %>
<% end %>